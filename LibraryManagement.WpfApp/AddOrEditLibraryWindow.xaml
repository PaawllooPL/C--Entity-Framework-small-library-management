<Window x:Class="LibraryManagement.WpfApp.AddOrEditLibraryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryManagement.WpfApp"
        mc:Ignorable="d"
        Title="AddOrEditLibraryWindow" Height="450" Width="800">
    <Grid>
        <Label x:Name="Name_Label" Content="Name" HorizontalAlignment="Left" Margin="130,124,0,0" VerticalAlignment="Top"/>
        <Label x:Name="Address_Label" Content="Address" HorizontalAlignment="Left" Margin="130,164,0,0" VerticalAlignment="Top"/>
        <Button x:Name="Save_Button" Content="Save" Height="40" Width="60" HorizontalAlignment="Left" Margin="130,68,0,0" VerticalAlignment="Top" Click="Save_Button_Click"/>
        <Button x:Name="Exit_Button" Content="Exit" Height="40" Width="60" HorizontalAlignment="Left" Margin="200,68,0,0" VerticalAlignment="Top" Click="Exit_Button_Click"/>
        <TextBox x:Name="Name_TextBox" HorizontalAlignment="Left" Margin="200,124,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="Address_TextBox" HorizontalAlignment="Left" Margin="200,164,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>


    </Grid>
</Window>
